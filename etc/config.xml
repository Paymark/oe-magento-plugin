<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <paymarkoe>
                <active>0</active>
                <title>Paymark Online EFTPOS</title>
                <model>PaymarkOEFacade</model>
                <debug>1</debug>
                <debug_log>1</debug_log>
                <order_status>pending_payment</order_status>
                <payment_action>authorize_capture</payment_action>
                <currency>NZD</currency>
                <can_initialize>1</can_initialize>
                <can_authorize>0</can_authorize>
                <can_capture>0</can_capture>
                <can_refund>0</can_refund>
                <can_void>0</can_void>
                <can_cancel>0</can_cancel>
                <can_use_checkout>1</can_use_checkout>
                <is_gateway>1</is_gateway>
                <sort_order>2</sort_order>
            </paymarkoe>
            <!--<paymarkoe_vault>
                <model>PaymarkOEVaultFacade</model>
                <title>Online EFTPOS</title>
            </paymarkoe_vault>-->
        </payment>

        <dev>
            <js>
                <minify_exclude>
                    <production>//open.paymark.co.nz/v1</production>
                    <development>//open.demo.paymark.co.nz/v1</development>
                </minify_exclude>
            </js>
        </dev>
    </default>
</config>
